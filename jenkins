pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'fusion-dev-image'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                git url: 'https://github.com/AJ14314/fusion-dev.git', branch: 'wip'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using Dockerfile.dev
                    sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG -f Dockerfile.dev .'
                }
            }
        }

        stage('Package (Optional)') {
            steps {
                script {
                    // Tag and push to Docker registry (optional)
                    sh 'docker tag $DOCKER_IMAGE:$DOCKER_TAG aj14314/$DOCKER_IMAGE:$DOCKER_TAG'
                    sh 'docker push aj14314/$DOCKER_IMAGE:$DOCKER_TAG'
                }
            }
        }
    }

    post {
        always {
            // Cleanup images
            sh 'docker rmi $DOCKER_IMAGE:$DOCKER_TAG || true'
        }

        success {
            echo 'Build completed successfully!'
        }

        failure {
            echo 'Build failed.'
        }
    }
}
